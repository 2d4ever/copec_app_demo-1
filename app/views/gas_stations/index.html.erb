  <tbody>
    <div class="row">
    <% @gas_stations.each do |gas_station| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">

       <div class="caption">
        <h3><%= gas_station.id_station%> <%= gas_station.name %></h3>
        </div>
        <%= image_tag gas_station.image,
            class: 'img-responsive center-block',
            style:'max-height:300px;' %>

        <p><%= gas_station.address %></p>

        <p><%= link_to 'Visualizar', gas_station,
               class: 'btn btn-primary' %>
           <%= link_to 'Editar',
               edit_gas_station_path(gas_station),
               class: 'btn btn-warning' %>
           <%= link_to 'Eliminar', gas_station,
               method: :delete, data: { confirm: 'Estas seguro?' }, class: 'btn btn-default' %></p>
</div>
</div>
    <% end %>
</div>
