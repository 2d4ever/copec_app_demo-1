<div class="row">
  <div class="col-md-9"><h3><strong>Estaciones de Servicio</strong></h3></div>
  <div class="col-md-1"><%= link_to 'Nueva Estacion de Servicio', new_gas_station_path, class: 'btn btn-success'%></div>
</div>


<div class="row">
  <% @gas_stations.each do |gas_station| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">

      <div class="caption">
        <h3><%= gas_station.id_station%> / <%= gas_station.name %></h3>
      </div>
      <p>Correo de contacto:<%= gas_station.user.email if gas_station.user %> </p>
      <%= image_tag gas_station.image,
      class: 'img-responsive center-block',
      style:'max-height:150px;' %>
      <p><%= gas_station.address %></p>
      <p><%= link_to 'Visualizar', gas_station, class: 'btn btn-default' %>
         <%= link_to 'Editar', edit_gas_station_path(gas_station), class: 'btn btn-default' %>
         <%= link_to 'Eliminar', gas_station, method: :delete, data: { confirm: 'Estas seguro?' }, class: 'btn btn-danger' %></p>
      </div>
    </div>
    <% end %>
  </div>
